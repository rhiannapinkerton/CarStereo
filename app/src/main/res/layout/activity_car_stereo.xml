<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs371.carstereo.CarStereo">

    <LinearLayout
        android:id="@+id/Stereo"
        android:layout_width="1030dp"
        android:layout_height="640dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_blue_dark"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="-15dp">

        <LinearLayout
            android:id="@+id/panel1"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_weight="0.03"
            android:orientation="horizontal"
            android:weightSum="1">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.14" />

            <ToggleButton
                android:id="@+id/Frequency"
                android:layout_width="3dp"
                android:layout_height="90dp"
                android:layout_weight="0.14"
                android:text="ToggleButton"
                android:textOff="FM"
                android:textOn="AM" />

            <TextView
                android:id="@+id/radioDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="jnk"
                android:textSize="24sp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />

            <SeekBar
                android:id="@+id/tunerBar"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="0.33" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.14" />

            <ToggleButton
                android:id="@+id/PowerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Power"
                android:text="ToggleButton" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.23"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel3"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/panel4"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_weight="0.23"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

            <ToggleButton
                android:id="@+id/play"
                android:layout_width="265dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="play pause"
                android:textOff="Play"
                android:textOn="Pause" />

            <Button
                android:id="@+id/stop"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Stop" />

            <Button
                android:id="@+id/forward"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="SKIP BACK" />

            <Button
                android:id="@+id/back"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="SKIP FORWARD" />

            <Button
                android:id="@+id/replay"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="REPLAY" />

            <Button
                android:id="@+id/eject"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="EJECT" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel5"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:text="VOLUME:"
                android:textSize="50sp" />

            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1.59" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
